{
  "name": "invest-tracker-backend",
  "version": "0.1.0",
  "description": "Fastify-based API server for Invest Tracker",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --esm src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "db:create-collections": "node ./scripts/create-collections.mjs",
    "db:create-indexes": "node ./scripts/create-indexes.mjs"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/jwt": "^8.1.1",
    "@fastify/sensible": "^5.6.0",
    "dayjs": "^1.11.12",
    "decimal.js": "^10.4.3",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "mongodb": "^6.8.0",
    "nanoid": "^5.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "8.57.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
