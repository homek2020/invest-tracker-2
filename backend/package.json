    "fastify-plugin": "^4.5.1",
    "zod": "^3.22.4",
    "decimal.js": "^10.4.3",
    "dayjs": "^1.11.10",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2",
    "@types/node": "^20.11.17",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  }
}
